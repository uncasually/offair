<section class="events-container">
	{% for post in postslist | reverse %}
		<article class="events-item"{% if post.url == url %} data-current="current item"{% endif %}>
			<a href="{{ post.url | url }}">
					{% if post.data.image %}
						<img class="event-thumb" src="{{ post.data.image }}" alt="event thumbnail"/>
					{% else %}
						Untitled
					{% endif %}
			</a>
			{#<h3>
				<a class="events-link" href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }} - <time datetime="{{ post.date | machineDate }}">{{ post.date | readableDate }}</time>
				</p>
			{% endif %}
			{#% if post.data.tags %}
				<p>
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %#}
		</article>
	{% endfor %}
</section>
