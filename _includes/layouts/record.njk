---
layout: layouts/base.njk
section: record
---

<article>
  <h1>{{ title }}</h1>
  <img class="record-img" src="{{ image }}" />
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> 
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "records" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/records/' | url }}">‚Üê Index</a>
</nav>
